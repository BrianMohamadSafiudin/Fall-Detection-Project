<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DeteksiJatuh.chart" parent="Theme.Material3.Light">
        <item name="colorPrimary">@color/primery</item>
        <item name="colorPrimaryVariant">@color/indigo_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/indigo_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="bottomNavigationStyle">@style/MyBottomNavigationStyle</item>
    </style>

    <style name="Base.Theme.DeteksiJatuh" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primery</item>
        <item name="colorPrimaryVariant">@color/indigo_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/indigo_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="bottomNavigationStyle">@style/MyBottomNavigationStyle</item>
    </style>
    <style name="MyBottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="android:itemBackground">@color/primery</item>
    </style>
    <style name="Theme.DeteksiJatuh" parent="Base.Theme.DeteksiJatuh" />
</resources>